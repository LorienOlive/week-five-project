<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mystery Word</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>
    <div class="main-wrapper">
      <form action="/" method="post" class="letter-picker">
        <input type="text" name="guessLetter" id="guessInput" placeholder="Please Enter a Letter" value="">
        <input type="submit" name="guessLetter" id="guessButton" value="Submit Letter"></button>
      </form>
      <ul id="blanks">
        {{#blanks}}
          {{#.}}
          <li class="list-item">{{.}}</li>
          {{/.}}
        {{/blanks}}
      </ul>
      <ul id="matchedGuesses">
        {{#matches}}
          {{#.}}
          <li class="list-item">{{.}}</li>
          {{/.}}
          {{/matches}}
      </ul>
      </form>
    </div>
  </body>
</html>
