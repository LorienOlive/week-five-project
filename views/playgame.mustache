<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mystery Word</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/css?family=PT+Sans|Ultra" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  </head>
  <body>
    <div class="body-wrapper">
      <div class="notification">
        {{#notification}}
        {{#.}}
        <h2>{{.}}</h2>
        <form action="/newgame" method="post" class="reset">
          <button type="submit" name="newGame" id="newGame" value="">New Game?</button>
        </form>
        {{/.}}
        {{/notification}}
        {{^notification}}
        <h2></h2>
        {{/notification}}
      </div>
      <h1 class="playgame-header">Mystery Word</h1>
      <div class="game-wrapper">
        {{#counter}}
        {{#.}}
        <h3>You have {{.}} turns left</h3>
        {{/.}}
        {{/counter}}
        {{^counter}}
        <h3>You are out of guesses</h3>
        {{/counter}}
        <div class="main-wrapper">
          <form action="/playgame" method="post" class="letter-picker">
            <input type="text" name="guessLetter" id="guessInput" value="">
          </form>
        <ul id="blanks">
          {{#blanks}}
            {{#.}}
            <li class="list-item">{{.}}</li>
            {{/.}}
          {{/blanks}}
        </ul>
        <div class="guesses">
          <ul id="lettersGuessed">
            {{#lettersGuessed}}
              {{#.}}
              <li class="guessedLetter">{{.}},</li>
              {{/.}}
            {{/lettersGuessed}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
